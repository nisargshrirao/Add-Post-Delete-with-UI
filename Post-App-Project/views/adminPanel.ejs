<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin | Page</title>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<style>
  body {
    background-color: rgb(121, 150, 160) !important;
  }

  table,
  td,
  th {
    border: 4px solid black;
    padding: 5px;
  }

  table {
    border-collapse: collapse;
    width: 100%;

  }

  th {
    height: 40px;
    background-color: darkturquoise;
  }

  #user {
    color: darkcyan;
    background-color: white;
    font-size: 30px;
  }

  .log {
    background-color: deepskyblue;
    margin-left: 1600px;
    padding: 15px;
    margin-top: 0;
  }

  .head {
    margin-top: 50px;
    align-items: center;
    display: flex;
    justify-content: center;
  }

  .see-post {
    padding: 12px 40px;
    margin-top: 1rem;
    font-size: 1rem;
    background: #eee;
    border: 1px solid #333;
    cursor: pointer;
  }

  .frm {
    display: flex;
    justify-content: flex-end;
    margin-right: 28px;
    height: 60px;
    color: white;
  }

  .log {
    background-color: blue;
    color: white;
    margin-left: 1600px;
  }
</style>

<body>
  <form action="/logout" method="post">
    <button class="log">Logout</button>
  </form>
  <h1 class="head">Admin Home Page</h1>
  <br>
  <br>
  <a class="see-post" href="/showAllPostToAdmin">All-Post</a>
  <br>
  <br>
  <table>
    <tr>
      <th>Role</th>   
      <th>Name</th>
      <th>Make Admin</th>
      <th>Remove Admin</th>
    </tr>
    <tr>
      <% for (let user of users) { %>
        <td>
          <% user.roles.forEach(element=>{ %>
            <%- element.name %>
              <% }) %>
        </td>
        <td>
          <%- user.name %>
        </td>
        <td>
          <a href="/makeAdmin?id=<%-user._id%>">Make Admin</a>
        </td>
        <td>
          <a href="/removeFromAdmin?id=<%-user._id%>">Remove Admin</a>
        </td>
    </tr>
    <% } %>
  </table>
  </tbody>
  </table>
</body>
